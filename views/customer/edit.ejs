      <input
        type="text"
        class="form-control"
        id="exp_address"
        name="exp_address"
        value="<%= parcel.exp_address %>"
        placeholder="Sender Address"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="exp_tel">Sender Phone</label>
      <input
        type="text"
        class="form-control"
        id="exp_tel"
        name="exp_tel"
        value="<%= parcel.exp_tel %>"
        placeholder="Sender Phone"
        required
      />
    </div>

    <div class="col">
      <label for="exp_email">Sender Email</label>
      <input
        type="text"
        class="form-control"
        id="exp_email"
        name="exp_email"
        value="<%= parcel.exp_email %>"
        placeholder="Sender Email"
        required
