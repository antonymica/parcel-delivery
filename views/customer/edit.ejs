  <div class="form-group mb-4">
    <label for="parcel_desc">Parcel Details</label>
    <textarea
      class="form-control"
      name="parcel_desc"
      id="parcel_desc"
      cols="30"
      rows="5"
      placeholder="Parcel Details"
    >
<%=parcel.parcel_desc%></textarea
    >
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Parcel</button>
    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete Parcel
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a parcel record.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the parcel record of
          <b class="fw-bold"
            ><%= parcel.parcel_num %> <%= parcel.parcel_type %></b
          ><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/edit/<%= parcel._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Parcel
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
