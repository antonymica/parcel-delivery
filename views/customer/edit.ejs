        <option class="form-control" value="Standard">Standard</option>
        <option class="form-control" value="Hazardous">Hazardous</option>
        <option class="form-control" value="Heavy">Heavy</option>
        <option class="form-control" value="Fragile">Fragile</option>
        <option class="form-control" value="Perishable">Perishable</option>
        <option class="form-control" value="Valuable">Valuable</option>
